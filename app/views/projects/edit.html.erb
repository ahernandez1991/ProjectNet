<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <%= form_for @p do |f| %>
      <h1><%= @p.nombre %></h1>
        <div class="form-group">
          <label class="control-label col-sm-6">Nombre del Proyecto</label>
          <%= f.text_field :nombre, class: "form-control input-lg" %>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-6">Introducción</label>
          <%= f.text_area :introduccion, class: "form-control input-lg" %>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-6">Planteamiento del Problema</label>
          <%= f.text_area :planteamiento, class: "form-control input-lg" %>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-6">Antecedentes</label>
          <%= f.text_area :antecedentes, class: "form-control input-lg" %>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-6">Justificación</label>
          <%= f.text_area :justificacion, class: "form-control input-lg" %>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-6">Marco Teórico</label>
          <%= f.text_area :marco_teorico, class: "form-control input-lg" %>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-6">Objetivos</label>
          <%= f.text_area :objetivos, class: "form-control input-lg" %>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-6">Desarrollo</label>
          <%= f.text_area :desarrollo, class: "form-control input-lg" %>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-6">Conclusiones</label>
          <%= f.text_area :conclusiones, class: "form-control input-lg" %>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-6">Referencias</label>
          <%= f.text_area :referencias, class: "form-control input-lg" %>
        </div>
          <%= f.submit "Modificar Proyecto", class: "btn btn-success btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
