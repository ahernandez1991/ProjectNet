<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <%= form_for @p do |f| %>
      <h1><%= @p.nombre %></h1>
      <div align="right">
      <%= link_to "<span style='font-size: 25px' class='glyphicon glyphicon-pencil' data-toogle='tooltip' title='Editar Proyecto'></span>".html_safe, edit_project_path(@p) %>
      </div>
        <div class="form-group">
          <label class="control-label col-sm-6">Introducción</label>
          <%= f.text_area :introduccion, class: "form-control input-lg", readonly: "true"%>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-6">Planteamiento del Problema</label>
          <%= f.text_area :planteamiento, class: "form-control input-lg", readonly: "true"%>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-6">Antecedentes</label>
          <%= f.text_area :antecedentes, class: "form-control input-lg", readonly: "true"%>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-6">Justificación</label>
          <%= f.text_area :justificacion, class: "form-control input-lg", readonly: "true"%>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-6">Marco Teórico</label>
          <%= f.text_area :marco_teorico, class: "form-control input-lg", readonly: "true"%>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-6">Objetivos</label>
          <%= f.text_area :objetivos, class: "form-control input-lg", readonly: "true"%>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-6">Desarrollo</label>
          <%= f.text_area :desarrollo, class: "form-control input-lg", readonly: "true"%>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-6">Conclusiones</label>
          <%= f.text_area :conclusiones, class: "form-control input-lg", readonly: "true"%>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-6">Referencias</label>
          <%= f.text_area :referencias, class: "form-control input-lg", readonly: "true"%>
      <% end %>
    </div>
  </div>
</div>
