<!DOCTYPE html>
<html>
  <head>
    <title>ProjectNet</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <!--Creación de la barra de navegación-->
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
    <a class="navbar-brand">ProjectNet</a>
  </div>
  <ul class="nav navbar-nav">
    <li class="dropdown">
      <a class="dropdown-toggle" data-toggle="dropdown" href="#">Proyecto
      <span class="caret"></span></a>
      <ul class="dropdown-menu">
        <li><%= link_to "Consultar", projects_path %></li>
        <li><%= link_to "Crear", new_project_path%></li>
      </ul>
    </li>
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Integrantes
        <span class="caret"></span></a>
        <ul class="dropdown-menu">
          <li><%= link_to "Consultar", users_path %></li>
          <li><%= link_to "Crear", new_user_path %></li>
          <li><%= link_to "Modificar"%></li>
        </ul>
        </li>
  </ul>
  <ul class="nav navbar-nav navbar-right">
      <li><%= link_to "<span class='glyphicon glyphicon-log-in'></span> Iniciar Sesión ".html_safe, login_path, method: :new %></li>
      <li><%= link_to "<span class='glyphicon glyphicon-user'></span> Cerrar Sesión ".html_safe, logout_path, method: :delete %></li>
  </ul>
</div>
</nav>
<% if signed_in? %>
  <div><h4 style="font-family:Dosis;" class="col-sm-12 col-sm-offset-0"> Hola <%= current_user.name %></h4>
<% end %>
<h1 style="font-family:Dosis;" class="col-sm-4 col-sm-offset-0">ProjectNet ®</h1>
<% if flash[:notice] %>
  <div class="col-sm-6 col-sm-offset-3">
    <div class="alert alert-success alert-dismissible"><%= flash[:notice] %>
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    </div>
  </div>
<% end %>
          <%= yield %>
  </body>
</html>
