<!DOCTYPE html>
<html>
  <head>
    <title>ProjectNet</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <!--Creación de la barra de navegación-->
    <nav class="navbar navbar-inverse">
<div class="container-fluid">
  <div class="navbar-header">
    <a class="navbar-brand">ProjectNet</a>
  </div>
  <ul class="nav navbar-nav">
    <li class="dropdown">
      <a class="dropdown-toggle" data-toggle="dropdown" href="#">Proyecto
      <span class="caret"></span></a>
      <ul class="dropdown-menu">
        <li><a href="http://localhost:3000/projects">Consultar</a></li>
        <li><a href="http://localhost:3000/projects/new">Crear</a></li>
      </ul>
    </li>
    <li class="dropdown">
      <a class="dropdown-toggle" data-toggle="dropdown" href="#">Asesores
      <span class="caret"></span></a>
      <ul class="dropdown-menu">
        <li><a href="#">Consultar</a></li>
        <li><a href="http://localhost:3000/users/new">Crear</a></li>
        <li><a href="#">Modificar</a></li>
      </ul>
      </li>
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Integrantes
        <span class="caret"></span></a>
        <ul class="dropdown-menu">
          <li><a href="#">Consultar</a></li>
          <li><a href="http://localhost:3000/users/new">Crear</a></li>
          <li><a href="#">Modificar</a></li>
        </ul>
        </li>
  </ul>
  <ul class="nav navbar-nav navbar-right">
      <li><%= link_to "<span class='glyphicon glyphicon-log-in'></span> Iniciar Sesión ".html_safe, login_path, method: :new %></li>
      <li><%= link_to "<span class='glyphicon glyphicon-user'></span> Cerrar Sesión ".html_safe, logout_path, method: :delete %></li>
  </ul>
</div>
</nav>
<% if signed_in? %>
  <div><h4 style="font-family:Dosis;" class="col-sm-12 col-sm-offset-0"> Hola <%= current_user.name %></h4>
<% end %>
<h1 style="font-family:Dosis;" class="col-sm-4 col-sm-offset-0">ProjectNet ®</h1>
<% if flash[:notice] %>
  <div class="alert alert-info"><%= flash[:notice] %></div>
<% end %>
          <%= yield %>
  </body>
</html>
